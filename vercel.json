{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.(ts|js)",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/avatar/(?<options>[^/]+)",
      "dest": "/api/avatar.ts?options=$options"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 